{% assign title = headline | default: "Add an attention-getting headline" %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ label }}: {{title}}</title>
    <meta name="description" content="{{ summary }}" />
    <script src="https://kit.fontawesome.com/e241e4c9e6.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="bg-light bg-gradient">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <span class="navbar-brand">
            {% if config.logo %}
                <img src="{{ config.logo |  url }}" alt="logo" width="30" height="30" class="d-inline-block align-text-middle">
            {%endif%}
            {{ config.brand }}
        </span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% for link in collections.nav %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ link.url | url }}">{{ link.data.label }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="navbar-text">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="tel:{{ config.tel | tel }}" class="nav-link">{{ config.tel }}</a></li>
                    <li class="nav-item"><a href="mailto:{{ config.email }}" class="nav-link">{{ config.email }}</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<header content="p-5">
    <div class="container p-5 text-center">
        <h1 class="py-5">{{title}}</h1>
    </div>
</header>
<main class="py-5">
    <div class="container py-5">
        {{ content }}
    </div>
</main>
<footer class="py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-md">
                {% include _address %}
                <p class="fw-bold">Social</p>
                {% include _social %}
            </div>
            <div class="col-md">
                <p class="fw-bold">Hours</p>
                {% include _hours %}
            </div>
            <div class="col-md">
                <p class="fw-bold">Links</p>
                {% include _links %}
            </div>
        </div>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
